<!DOCTYPE html>
<html lang="en">
<%- include("partials/head") %>
<link rel="stylesheet" href="/stylesheets/usermovies.css">
<link rel="stylesheet" href="/stylesheets/userLibrary.css">
<body>
<!-- *** HEADER  *** -->
<header id="top">
    <nav id="navUser">
        <div id="user" class="usuario-autenticado">
            <img src="/images/user.png" alt="user" />
            <span><%= user.name %></span>
        </div>
        <div class="menu">
            <a href="#">Add Movie</a>
            <a href="#">My Library</a>
            <a href="#">Settings</a>
            <a href="/support">Support</a>
        </div>
        <div class="logout">
            <a href="/logout" class="button">Log out</a>
        </div>
    </nav>
</header>

<!--*** END HEADER ***-->

<!--*** MAIN ***-->
<main class="user-library">
    <section class="movies-section">
        <h1>Your Library</h1>
        <div class="movies-grid">
            <% user.copies.forEach(copy => { %>
                <a href="/movie/<%= copy.movieDetails.id %>" class="movie-link">
                    <div class="movie-card">
                        <div class="movie-image-container">
                            <img src="<%= copy.movieDetails.image_url %>" alt="<%= copy.movieDetails.name %>">
                        </div>
                        <p class="movie-title"><%= copy.movieDetails.name %></p>
                        <div class="movie-info">
                            <p>
                                <strong>Status:</strong>
                                <span><%= copy.status %></span>
                            </p>
                            <p>
                                <strong>Format:</strong>
                                <span><%= copy.format %></span>
                            </p>
                        </div>
                    </div>
                </a>
            <% }); %>
        </div>
    </section>
</main>

<!--*** END MAIN ***-->

<!--*** FOOTER ***-->
<%- include("partials/footer") %>

<!--*** END FOOTER ***-->

<!-- Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<script src="/javascripts/cards.js"></script>
</body>
</html>
